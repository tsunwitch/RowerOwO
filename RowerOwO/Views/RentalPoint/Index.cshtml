@model IEnumerable<RowerOwO.ViewModels.RentalPointListViewModel>

@{
    ViewData["Title"] = "View";
}

<style>
    .rental-box{
        margin:10px 0px 10px 0px;
        padding:15px;
        border-radius:10px;
        background: #fafafa;
        filter: drop-shadow(0px 0px 0px #bfbfbf);
        width:calc(100%/3);
    }
</style>

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <p>smiemszny obrazek</p>
    <tbody>
        @foreach (var item in Model)
        {
            <div style="display:flex;flex-wrap:wrap;width:100%">
                <div class="rental-box">
                    <h3>@item.Name</h3>
                    <p style="color:#FFACAC; font-size:1.4rem;opacity:0.6">@item.City</p><br>
                    @item.Street @item.Number<br><br>

                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        } 
    </tbody>
</table>
