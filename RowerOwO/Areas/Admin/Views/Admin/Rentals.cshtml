@model IEnumerable<RowerOwO.Areas.Admin.ViewModels.RentalCRUDViewModel>

@{
    ViewData["Title"] = "Rentals";
}

<style>
    .nomargin{
        margin:0;
    }
</style>

<h1>Aktywne wypożyczenia</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" style="table-layout: fixed; width: 100%;">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Pojazd
            </th>
            <th>
                Od
            </th>
            <th>
                Do
            </th>
            <th>
                Wypożyczalnia
            </th>
            <th>
                Opcje
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Vehicle.Name
            </td>
            <td>
                @item.RentFrom
            </td>
            <td>
                @item.RentTill
            </td>
            <td>
                @item.RentalPoint.Name
            </td>
            <td>
                @*href="/Admin/DeleteUser/@item.Id"*@
                <a href="/Admin/RentalsEdit/@item.Id" class="button-round-inverted nomargin"><i class="bi bi-pencil"></i></a>
                <a href="/Admin/DeleteRental/@item.Id" class="button-round-inverted nomargin"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
