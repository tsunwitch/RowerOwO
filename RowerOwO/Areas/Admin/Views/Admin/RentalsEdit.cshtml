@model RowerOwO.Areas.Admin.ViewModels.RentalCRUDViewModel

@{
    ViewData["Title"] = "RentalsEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edytuj rezerwację</h1>

<h4>@Model.Id</h4>
<hr />

@using (Html.BeginForm("EditRentalSubmit", "Admin"))
{
<div class="row">
    <div class="col-md-4">
        <form asp-action="RentalsEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Vehicle</label>
                <select name="vehicleName" class="form-control" value="@Model.Vehicle.Name">
                <span asp-validation-for="Vehicle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">RentalPoint</label>
                <input asp-for="rentalPointName" class="form-control" value="@Model.RentalPoint.Name" />
                <span asp-validation-for="RentalPoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Od</label>
                <input name="rentFrom" class="form-control" />
                <span asp-validation-for="RentFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Do</label>
                <input name="rentTill" class="form-control" />
                <span asp-validation-for="RentTill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}

<div>
    <a href="/Admin" class="button-round-inverted">Back to list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
